        <div class="card">
            <img src="@Model.Avatar" alt="John" style="width:100%">
            <h1>@Model.Name</h1>
            <p class="title">@Model.Desc</p>
            <p>@Model.Addr</p>
            <p>@Model.Email</p>

            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            <div style="margin: 24px 0;">
