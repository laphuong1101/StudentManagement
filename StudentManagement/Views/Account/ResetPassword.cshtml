@model StudentManagement.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<section class="bg-soft d-flex align-items-center my-5 mt-lg-6 mb-lg-5">
    <div class="container">
        <div class="row justify-content-center form-bg-image">
            <p class="text-center"><a href="@Url.Action("Login", "Account")" class="text-gray-700"><i class="fas fa-angle-left me-2"></i> Back to log in</a></p>
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div class="bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                    <h1 class="h3 mb-4">Reset password</h1>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.Code)
                        <div class="mb-4">
                            @Html.LabelFor(m => m.Email, "Your Email", new { @class = "" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@company.com", id = "email", required = "", disabled = ""})
                            </div>
                        </div>
                        <div class="mb-4">
                            @Html.LabelFor(m => m.Password, "Your Password", new { @class = "" })
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon4"><span class="fas fa-unlock-alt"></span></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", id="password", required = "", autofocus = ""})
                            </div>
                        </div>
                        <div class="mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password", new { @class = "" })
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon5"><span class="fas fa-unlock-alt"></span></span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", id = "confirm_password", required = ""})
                            </div>
                        </div>
                        
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="d-grid">
                            <input type="submit" class="btn btn-dark" value="Reset password"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
