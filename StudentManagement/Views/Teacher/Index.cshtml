@model IEnumerable<StudentManagement.Models.Clazz>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
    <div class="d-block mb-4 mb-md-0">
        <h2 class="h4">Danh Sách Lớp Học</h2>
    </div>
</div>
<div class="table-settings mb-4">
    <div class="row align-items-center justify-content-between">
        <div class="col col-md-6 col-lg-3 col-xl-4">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon2"><span class="fas fa-search"></span></span>
                <input type="text" class="form-control" id="exampleInputIconLeft" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2">
            </div>
        </div>
    </div>
</div>
<div class="card card-body shadow-sm table-wrapper table-responsive mb-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Lớp</th>
                <th>Danh Sách Lớp</th>
                <th>Danh Sách Buổi Học</th>
                <th>Danh Sách Môn Học</th>
                <th>Buổi Học Hôm nay</th>
            </tr>
        </thead>
        <tbody>
            <!-- Item -->
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="fw-normal">@item.ClazzId</span> </td>
                    <td><span class="fw-normal">@item.ClazzName</span></td>
                    <td><span class="fw-normal">@Html.ActionLink("Chi Tiết", "ListStudent", new { id = item.ClazzId })</span></td>
                    <td><span class="fw-normal">@Html.ActionLink("Chi Tiết", "ListSessionDetail", new { id = item.ClazzId })</span></td>
                    <td><span class="fw-normal">@Html.ActionLink("Chi Tiết", "ListSubject", new { id = item.ClazzId })</span></td>
                    <td><span class="fw-normal">@Html.ActionLink("Chi Tiết", "SessionDetail", new { id = item.ClazzId })</span></td>
                </tr>
            }
            <!-- Item -->
        </tbody>
    </table>
</div>

